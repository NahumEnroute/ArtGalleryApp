<p style="color: green"><%= notice %></p>

<h1>Artworks</h1>

<%= form_with url: artworks_path, method: :get do | form | %>

  <div class="form-group">
    <%= form.label :user_id, class: "form-label select-label"%>
    <%= select_tag :user_id, options_from_collection_for_select(@users, :id, :first_name, @user_id), multiple: true, class: 'form-control select-control'%>
  </div>

  <div class="form-group">
    <%= form.submit "Search", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "New artwork", new_artwork_path %>
<%== pagy_nav(@pagy) %>

<div id="artworks" class="row">
  <% @artworks.each do |artwork| %>
    <div class="card m-2" style="width: 18rem;">
      <div class="m-3">
        <%= render artwork %>
        <p>
          <%= link_to "Show this artwork", artwork %>
        </p>
      </div>
    </div>
  <% end %>
</div>
